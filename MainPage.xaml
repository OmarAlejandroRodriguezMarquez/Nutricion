<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutricion.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="logo.png"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Salud App"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Bienvenido"
                FontSize="18"
                HorizontalOptions="Center" />

            <Entry
                x:Name="txtNombre"
                Placeholder="Nombre (s)"
                PlaceholderColor="Purple">
            </Entry>
            
            <Button 
                x:Name="btnDatos"
                Text="Entrar"
                Clicked="btnDatos_Clicked">
                
            </Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
