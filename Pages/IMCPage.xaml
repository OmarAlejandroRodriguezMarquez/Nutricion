<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nutricion.Pages.IMCPage"
             Title="IMCPage">
    <VerticalStackLayout>
        <Label 
            Text="Calcula tu IMC"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="txtPeso"
            Placeholder="Peso (Kgs)"
            Keyboard="Numeric">
        </Entry> 
        <Entry
            x:Name="txtAltura"
            Placeholder="Altura (Mts)"
            Keyboard="Numeric">
        </Entry>
        <Button
            x:Name="btnCalcular"
            Text="Calcular"
            Clicked="btnCalcular_Clicked_1">
        </Button>
        <Label
            x:Name="lblGuardar">
        </Label>
        <Label
            x:Name="lblResultado">
        </Label>
        <Image
            x:Name="imgResultado"
            WidthRequest="300"
            HeightRequest="300">
        </Image>
    </VerticalStackLayout>
</ContentPage>